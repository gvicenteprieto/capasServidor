<div class="m-1 p-2">
  {{#if listProductsOnDB}}
    <h4 class="mb-3 text-center text-light">
      Lista de Productos cargados en la Base de datos</h4>

    <table class="table table-striped table-hover">
      <thead class="bg-warning">
        <tr>
          <th scope="col" class="text-center">ID</th>
          <th scope="col" class="text-left">Nombre</th>
          <th scope="col" class="text-center">Precio</th>
          <th scope="col" class="text-center">Stock</th>
          <th scope="col" class="text-left">Descripción</th>
          <th scope="col" class="text-center">Imagen</th>
          {{! <th scope="col">Acciones</th> }}
          <th scope="col" class="text-center">timestamp</th>

        </tr>
      </thead>
      <tbody class="bg-light p-2 mb-3">

        {{#each listProductsOnDB}}
          <tr>
            <th scope="row"><a
                href="/api/productos/{{this.id}}"
                class="btn btn-secondary"
              >id data</a></th>
            <td class="text-primary h6">{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>{{this.description}}</td>
            <td><img src="{{this.url}}" alt="{{this.name}}" width="25" /></td>
            {{!-- <td>
          <a href="/api/productos/{{this.id}}" class="btn btn-danger">dato</a>
        </td> --}}
            <td>{{this.timestamp}}</td>
          </tr>
        {{/each}}

      </tbody>
    </table>

  {{else}}
    <h4 class="mt-4"> No hay productos agregados</h4>
  {{/if}}

</div>

<hr>

<div class="row">
  {{#if listProductsOnDB}}
    <h4 class="mb-3 text-center text-light">
      Lista de Productos cargados en la Base de datos</h4>
              {{#each listProductsOnDB}}
                <div class="col-sm-4 col-md-3 col-lg-2">
                  <div class="card mb-2">
                    <img src="{{this.url}}" alt="{{this.name}}" class="card-img-top" />
                    <div class="card-body">
                      <h5 class="card-title">{{this.name}}</h5>
                      <p class="card-text">{{this.description}}</p>
                      <p class="card-text">{{this.price}}</p>
                      <p class="card-text">{{this.stock}}</p>
                      <a href="/api/productos/{{this.id}}" class="btn btn-primary">Ver</a>
                    </div>
                  </div>
                </div>
              {{/each}}
  {{else}}

  {{/if}}
</div>

