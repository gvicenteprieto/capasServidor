<div class="p-3">
  <div class="container mt-3 col-sm-8 col-lg-4 col-md-6">
    <h3 class="text-center text-light">REGISTRO</h3>

    <div class="row d-flex justify-content-center align-items-center">
      <div class="p-2 ">
        <form class="form" action="/registro" method="post" role="form" autocomplete="off"
          enctype="multipart/form-data">

          <div class="form-group  m-2">
            <label class="m-1">Nombre</label>
            <input id="name" name="name" placeholder="Ingrese su nombre" class="form-control" type="text" required
              autofocus />
          </div>

          <div class="form-group  m-2">
            <label class="m-1">Apellido</label>
            <input id="lastName" name="lastName" placeholder="Ingrese su apellido" class="form-control" type="text"
              required />
          </div>

          <div class="form-group  m-2">
            <label class="m-1">Dirección</label>
            <input id="adress" name="adress" placeholder="Ingrese su dirección" class="form-control" type="text"
              required />
          </div>

          <div class="form-group  m-2">
            <label class="m-1">Edad</label>
            <input id="age" name="age" placeholder="Ingrese su edad" class="form-control" type="number" required />
          </div>

          <div class="form-group  m-2">
            <label class=" m-2">Teléfono</label>
            <input id="phone" name="phone" placeholder="Ingrese su teléfono" class="form-control" type="tel" required />
          </div>

          <div class="form-group  m-2">
            <label class="  m-1">Suba una foto de perfil</label>
            <input class="form-control" id="image" name="image" type="file">
          </div>
          <hr class="text-light  m-1">
          <h4 class="form-group  m-3 text-warning">Los siguientes datos se le solicitarán para realizar el
            LOGIN
          </h4>

          <div class="form-group  m-2">
            <label class="  m-1" for="nombre">Nombre USUARIO</label>
            <input id="username" name="username" placeholder="Ingrese su nombre de Usuario" class="form-control"
              type="text" required />
          </div>

          <div class="form-group m-2">
            <label class="  m-1" for="email">Email</label>
            <input id="email" name="email" placeholder="Ingrese su email" class="form-control" type="text" required />
          </div>

          <div class="form-group m-2">
            <label class=" m-1" for="password">Password</label>
            <input id="password" name="password" placeholder="Ingrese su password" class="form-control" type="password"
              required />
          </div>

          <div class="container text-center">
            <input class="btn btn-primary mt-3" type="submit" value="Confirmar" />
          </div>
        </form>

      </div>

      <hr />
      <div class="container text-center">
        <button class="btn btn-success" onclick="location.href = '/login'">Ir
          a Login</button>
      </div>

    </div>

  </div>

</div>